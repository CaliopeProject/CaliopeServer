{
    "server": {
        "address": "127.0.0.1",
        "port": "9001",
        "debug": "True",
        "static": "../caliope_webui_beowulf/app",
        "formTemplates": "../templates/formTemplates",
        "formModules": "../../conf/siim2_forms.json",
        "cid_base_directory": "../../src/cid",
        "acl_file" : "conf/permissions_for_test.json"
    },
    /* Added fo app configurations */
    "app": {
        "languages": {
            "en": "English",
            "es": "Espa√±ol"
        },
        "modules": [
            {
                "gis_proxy": {
                    "package": "modules.gis_proxy",
                    "route": "/gis_proxy"
                }
            },
            {
                "forms": {
                    "package": "core.forms",
                    "service": "form"
                }
            },
            {
                "login": {
                    "package": "core.login",
                    "service": "login"
                }
            },
            {
                "tasks": {
                    "package": "core.tasks",
                    "service": "tasks"
                }
            },
            {
                "accounts": {
                    "package": "core.accounts",
                    "service": "accounts"
                }
            },
            {
                "access_control": {
                    "package": "core.access_control",
                    "service": "ac"
                }
            },
            {
                "search": {
                    "package": "core.search",
                    "service": "search"
                }
            },
            /*
             {
                "mtvprojects": {
                    "package": "modules.projects",
                    "service": "projects"
                }
            },
             */
            {
                "reg2bogota": {
                    "package": "modules.reg2bogota",
                    "service": "catastro"
                }
            }
        ]
    },
    "storage": {
        "local": {
            "absolut_path": "./storage",
            "max_filesize": 10000000,
            "allowed_extensions": ["txt", "pdf", "png", "jpg", "jpeg", "gif", "odt", "pdf", "ods"]
        }
    }
}
