{
    "server": {
        "address": "0.0.0.0",
        "test_address": "127.0.0.1",
        "port": "9000",
        "test_port": "9001",
        "debug": "True",
        "static": "../caliope_webui_beowulf/app",
        "formTemplates": "../../templates/formTemplates",
        "formModules": ["conf/siim2_forms.json", "conf/orfeo_forms.json"],
        "cid_base_directory": "src/cid",
        "cache_enabled": "True",
        "minify_enabled": "False",
        "acl_file" : "conf/permissions.json"
    },
    /* Added fo app configurations */
    "app": {
        "languages": {
            "en": "English",
            "es": "Espa√±ol"
        },
        "modules": [
            {
                "gis_proxy": {
                    "package": "modules.gis_proxy",
                    "route": "/gis_proxy"
                }
            },
            {
                "forms": {
                    "package": "core.forms",
                    "service": "form"
                }
            },
            {
                "login": {
                    "package": "core.login",
                    "service": "login"
                }
            },
            {
                "tasks": {
                    "package": "core.tasks",
                    "service": "tasks"
                }
            },
            {
                "accounts": {
                    "package": "core.accounts",
                    "service": "accounts"
                }
            },
            {
                "access_control": {
                    "package": "core.access_control",
                    "service": "ac"
                }
            },
            {
                "document": {
                    "package": "core.documents",
                    "service": "document"
                }
            }
        ]
    },
    "storage": {
        "local": {
            "absolut_path": "./storage",
            "max_filesize": 10000000,
            "allowed_extensions": ["txt", "pdf", "png", "jpg", "jpeg", "gif", "odt", "pdf", "ods"]
        }
    }
}
