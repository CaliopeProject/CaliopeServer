{
    "name": "proyectomtv",
    "html": [
      {
        "name" : "title",
        "type" : "div",
        "html" :
        [
          {
            "type" : "h1",
            "html" : "Crear proyecto"
          }
        ]
      },
      {
        "name": "name",
        "caption": "Nombre Proyecto",
        "type": "text",
        "validations" : {
          "required" : true,
          "minlength" : "10"
        }
      },
      {
        "name": "generalLocation",
        "caption": "Localización",
        "type": "ckedit"
      },
      {
        "name": "locality",
        "caption": "Localidad",
        "type": "select",
        "options": {
          "antonio_nar" : "Antonio Nariño",
          "barrios_unidos"  : "Barrios Unidos",
          "bosa"  : "Bosa",
          "chapinero": "Chapinero",
          "ciudad_bol": "Ciudad Bolivar",
          "engativa": "Engativá",
          "fontibon": "Fontibón",
          "kennedy" : "Kennedy",
          "la_candelaria" : "La Candelaria",
          "los_martires" : "Los Mártires",
          "puente_aranda" : "Puente Aranda",
          "rafael_uribe"  : "Rafael Uribe Uribe",
          "san_cristobal" : "San Cristóbal",
          "santa_fe" : "Santa Fe",
          "suba"  : "Suba",
          "sumapaz"  : "Sumapaz",
          "teusaquillo"  : "Teusaquillo",
          "tunjuelito"  : "Tunjuelito",
          "usaquen": "Usaquén",
          "usme": "Usme"
        }
      },
      {
        "name": "projectType",
        "caption": "Tipo de Proyecto",
        "type": "select",
        "options": {
          "py_pq_escala": "Proyecto Pequeña Escala",
          "py_gr_escala": "Proyecto Gran Escala"
        }
      },
      {
        "name": "profitCenter",
        "caption": "Centro de costos del proyecto",
        "type": "text"
      },
      {
        "name": "manager",
        "caption": "Usuario responsable",
        "type": "select",
        "options-load-server" : {
            "method"        : "accounts.getAll",
            "field-value"   : "username.value",
            "field-desc"    : "username.value"
        }
      },
      {
        "name": "creationDate",
        "type": "hidden"
      },
      {
        "name": "recordDocumentCreation",
        "caption": "Resolución Anuncio del Proyecto",
        "type": "attachment"
      }
    ],
  "actions" : [
      {
          "name": "Crear",
          "method":"projects.create"
      }
  ],
  "layout" : [
    {
      "columns" : [
        {
          "class"   : "page-header",
          "elements"  : ["title"]
        }
      ]
    },
    {
      "class" : "span12",
      "columns" : [
        {
          "class": "span6",
          "elements"  : ["name", "generalLocation", "manager", "creationDate"]
        },
        {
          "class": "span6",
          "elements"  : ["locality", "projectType", "profitCenter"]
        }
      ]
    },
    {
      "class" : "span6",
      "columns" : [
        {
          "class": "span6",
          "elements"  : ["recordDocumentCreation"]
        }
      ]
    }
  ]
}
