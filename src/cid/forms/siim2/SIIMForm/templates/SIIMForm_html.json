{
    "name": "SIIMForm",
    "html": [
        {
            "name": "title",
            "type": "div",
            "html": [
                {
                    "type": "h1",
                    "html": "Formulario SIIMForm"
                }
            ]
        },
        {
          "name": "ejRequired",
          "caption": "Ejemplo required",
          "type": "text",
          "class": "input-xlarge",
          "validations" : {
            "required" : true
          }
        },
        {
          "name": "ejNumber",
          "caption": "Ejemplo tipo number validacion min y max",
          "type": "number",
          "class": "input-xlarge",
          "validations" : {
            "min" : 0,
            "max" : 1000
          }
        },
        {
          "name": "ejMinMaxLength",
          "caption": "Ejemplo min length y max length",
          "type": "text",
          "class": "input-xlarge",
          "validations" : {
            "minlength" : 5,
            "maxlength" : 20
          }
        },
        {
          "name": "ejRNumber1",
          "caption": "Numero 1",
          "type": "number",
          "class": "input-xlarge",
          "validations" : {
            "min" : 0,
            "max" : 10
          }
        },
        {
          "name": "ejRNumber2",
          "caption": "Numero 2",
          "type": "number",
          "class": "input-xlarge",
          "validations" : {
            "min" : 0,
            "max" : 10
          }
        },
        {
          "name": "ejRNumber3",
          "caption": "Numero 3 - Restriccion: SI:Number1 + Number2 <= 10 ==> Number3 > 10",
          "type": "number",
          "class": "input-xlarge",
          "validations" : {
            "restrictions" : [
              {
                "evaluation" : "if( ({{ejRNumber1}} + {{ejRNumber2}}) <= 10 )",
                "then" : " {{ejRNumber3}} > 10 ",
                "key-message-false" : "El valor debe ser mayor de 10"
              }
            ]
          }
        },
        {
            "name": "ficha",
            "caption": "Ficha",
            "type": "text",
            "class": "input-xlarge",
            "options": {
                "idea": "Idea",
                "perfil": "Perfil",
                "prefactibilidad": "Prefactibilidad",
                "factibilidad": "Factibilidad",
                "ejecucion": "Ejecución"
            }
        },
        {
            "name": "estado",
            "caption": "Estado",
            "class": "input-xlarge",
            "type": "select",
            "options": {
                "en_estudio": "En Estudio",
                "en_ejecucion": "En Ejecución",
                "rechazado": "Rechazado",
                "aplazado": "Aplazado",
                "aprobado": "Aprobado",
                "no_aprobado": "No Aprobado",
                "viable": "Viable",
                "no_viable": "No Viable",
                "finalizado": "Finalizado"
            }
        },
        {
            "name": "nombre",
            "caption": "Nombre del Proyecto",
            "type": "text",
            "class": "input-xlarge",
            "validations": {
              "restrictions" : [
                {
                  "evaluation" : "if( {{estado}} !== 'en_estudio' )",
                  "then" : " {{nombre}} !== '' ",
                  "key-message-false" : "Nombre debe tener información  cuando estado no es 'en estudio'"
                },
                {
                  "evaluation" : "if( {{estado}} === 'en_estudio' )",
                  "then" : " {{nombre}} === '' ",
                  "key-message-false" : "Cuando estado es 'En estudio' no se debe ingresar nombre del proyecto"
                }
              ]
            }
        },
        {
            "name": "forma_intervencion",
            "caption": "Forma de intervención",
            "class": "input-xxlarge",
            "type": "select",
            "options": {
                "forma_generica": "Forma Genérica",
                "intervencion_directa": "Intervención Directa",
                "por_asociacion": "Por Asociación"
            }
        },
        {
            "name": "localidad",
            "caption": "Localidad",
            "class": "input-xxlarge",
            "type": "select",
            "options": {
                "": "",
                "usaquen": "Usaquén",
                "chapinero": "Chapinero",
                "santa_fe": "Santa Fe"
            }
        },
        {
            "name": "localizacion_general",
            "caption": "Localizacion General Proyecto",
            "type": "wysiwyg",
            "class": "input-xxlarge"
        },
        {
            "name": "acta_creacion_proyecto",
            "caption": "Acta creación proyecto",
            "type": "attachment"
        },
        {
            "name": "areas",
            "caption": "Areas",
            "type": "cw-grid",
            "class": "input-xxlarge height-1",
            "cw-grid-options": {
                "columns": [
                    {
                        "name": "areas.descripcion",
                        "caption": "Tipo Area"
                    },
                    {
                        "name": "areas.valor",
                        "caption": "Valor"
                    },
                    {
                        "name": "areas.desc",
                        "caption": "Descripción"
                    }
                ]
            }
        },
        {
            "name": "propietario",
            "caption": "Propietario",
            "type": "form",
            "cardinality": "*",
            "options-form": {
                "formId": "Person",
                "generic": "true",
                "autocomplete"  : {
                    "method" : "form.find",
                    "find-fields" : ["name", "surname"],
                    "show-fields" : ["name", "surname"],
                    "load-init"   : true,
                    "load-on-type": false
                }
            },
            "relation": {
                "rel_name": "propietario",
                "class": "Person",
                "target": "{{propietario}}"
            }
        }
    ]
}